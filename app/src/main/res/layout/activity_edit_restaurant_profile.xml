<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@drawable/italian_food_port"
    tools:context=".EditRestaurantProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:title="@string/edit_restaurant_profile"
            app:titleMarginStart="18dp"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Small"
            app:titleTextColor="@color/colorBlack" />
        <android.support.v7.widget.CardView
            android:id="@+id/cardInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/lightTransparentGray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:drawableStart="@drawable/ic_home_black_24dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/edt_nameRestaurant"
                        android:layout_width="match_parent"

                        android:inputType="textCapWords"
                        android:maxLength="20"
                        android:layout_height="wrap_content"
                        android:hint="@string/restaurant_name"
                        android:textColorHint="@color/darkGray"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/phone"
                        android:drawableStart="@drawable/ic_local_phone_black_24dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/edt_phoneRestaurant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="16"
                        android:hint="@string/phone_hint"
                        android:textColorHint="@color/darkGray"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile"
                        android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="16"
                        android:hint="@string/mobile_hint"
                        android:textColorHint="@color/darkGray"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:drawableStart="@drawable/ic_location_on_black_24dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>

                </LinearLayout>
                </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/cardOpeningHours"
            android:layout_width="match_parent"
            android:layout_height="482dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="371dp"
                android:layout_height="171dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btntimepicker3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="99dp"
                    android:layout_marginEnd="282dp"
                    android:layout_weight="1"
                    android:text="select time"
                    android:textSize="9dp" />

                <Button
                    android:id="@+id/btntimepicker4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="80dp"
                    android:layout_weight="1"
                    android:text="select time"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/txthourfrom2"
                    android:layout_width="69dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="94dp"
                    android:layout_marginTop="97dp"
                    android:text="From:      " />

                <Button
                    android:id="@+id/btntimepicker2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="82dp"
                    android:layout_weight="1"
                    android:text="select time"

                    android:textSize="9dp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                    android:text="opening hours"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btntimepicker1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="283dp"
                    android:layout_weight="1"
                    android:text="select time"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/txthourfrom"
                    android:layout_width="73dp"
                    android:layout_height="47dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="92dp"
                    android:layout_marginTop="29dp"
                    android:text="From:   " />

                <TextView
                    android:id="@+id/txthourto"
                    android:layout_width="71dp"
                    android:layout_height="44dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="3dp"
                    android:text="to" />

                <TextView
                    android:id="@+id/txthourto2"
                    android:layout_width="66dp"
                    android:layout_height="46dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="101dp"
                    android:layout_marginEnd="8dp"
                    android:text="to" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtdays"
                android:layout_width="91dp"
                android:layout_height="29dp"
                android:text="opening days:" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="198dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/txtdays"
                android:layout_alignParentStart="true"
                android:layout_marginStart="174dp"
                android:layout_marginBottom="-55dp"
                android:dropDownWidth="match_parent"
                android:entries="@array/weekdays"
                android:spinnerMode="dialog"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="159dp"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="49dp"
                android:text="Select a day:" />
        </RelativeLayout>

        <Button
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:text="@string/submit"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:text="@string/cancel"
                android:textAllCaps="false" />
        />
    </LinearLayout>
</ScrollView>